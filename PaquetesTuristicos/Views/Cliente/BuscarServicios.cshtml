@Model List<PaquetesTuristicos.Models.Service>
@{
    ViewBag.Title = "BuscarServicios";
}

<div class="row">
    <div class="col-md-5">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header">
                    @item.name
                </div>
                <div class="card-block">
                    <br>
                    <div class="col-md-10">

                        <h6 class="card-title">Caracteristicas</h6>
                        <ul>
                            <li>Dueño : @item.owner</li>
                            <li>Ubicacion: @item.province, @item.canton, @item.district</li>
                        </ul>
                        @Html.ActionLink("Seleccionar", null, null, new { id = @item.id }, new { @class = "btn btn-info" })
                    </div>
                    <br>
                </div>
            </div>
            <br>
        }

    </div>
</div>