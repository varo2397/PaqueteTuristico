
@{
    ViewBag.Title = "Categorias";
    string meGusta = "Me gusta";
}

<h2>Categorias</h2>

<div class="row">
    <div class="col-md-4 offset-md-6">
        @foreach (var item in Model)
        {
            if (item.activo)
            {
                <div class="card mb-3">

                    <div class="card-body">
                        <h6 class="card-title mb-1">@item.categoria1</h6>

                    </div>
                    <hr class="my-0">
                    <div class="card-body py-2 small">
                        @Html.ActionLink(meGusta, "Categorias", "Cliente", new { id = @item.idCategoria }, new { @class = "btn btn-info" })
                    </div>

                </div>
                <br>
            }
        }
       
    </div>
</div>