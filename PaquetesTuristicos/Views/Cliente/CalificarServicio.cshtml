
@{
    ViewBag.Title = "CalificarServicio";
}

<h2>CalificarServicio</h2>

<div class="col-md-4">
    <form method="post" action="~/Cliente/CalificarServicio">

        <div class="form-group">
            <label>Calificacion</label>
        </div>
        <div class="form-group">
            <input type="number" name="calificacion" class="form-control" min="1" max="5" required>
        </div>

        <div class="form-group">
            <label>Descripcion</label>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="comentario"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Calificar servicio">
        </div>

    </form>
</div>