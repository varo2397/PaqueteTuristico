<div class="row tab-content">
    <div class="col-md-12 tab-pane" id="informacion">
        <div class="card">
            <div class="card-header">
                @Model.name
            </div>
            <div class="card-block">
                <br>
                <div class="offset-md-4 col-md-10">

                    <h4 class="card-title">Caracteristicas</h4>
                    <ul>
                        <li>Dueño : @Model.owner </li>
                        <li>Ubicacion: @Model.province, @Model.canton, @Model.district </li>
                        <li>Categoria : @Model.categoria.categoria1</li>
                    </ul>
                    <div>
                        Tarifas :
                        <select id="tipo" class="form-control col-md-3" name="tipo" required>
                            <option value="None">Seleccione</option>
                            @foreach (var item in Model.fare)
                            {
                                <option value="@item.name">@item.name</option>
                            }
                        </select>

                        <br>
                        <div id="tarifas"></div>                        
                    </div>
                    @Html.ActionLink("Agregar al carrito", "AgregarItemAlCarrito", "Cliente", new { id = Model.id }, new { @class = "btn btn-info" })
                </div>
                <br>
            </div>
        </div>
        <br>

    </div>
    <div class="tab-pane" id="mapa">Hola</div>
</div>


