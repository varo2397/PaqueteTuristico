
@{
    ViewBag.Title = "Servicios";
}


<div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-2 col-md-offset-5">
        <button type="button" class="btn btn-dark btn-block" onclick="location.href='@Url.Action("AgregarServicio", "Vendedor")'">Agregar Servicio</button>
    </div>
</div>
<div class="row col-md-5">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                @item.name
            </div>
            <div class="card-block">
                <br>
                <div class="col-md-10">

                    <h6 class="card-title">Caracteristicas</h6>
                    <ul>
                        <li>@item.owner</li>
                        <li>Ubicacion: @item.province, @item.canton, @item.district</li>
                    </ul>
                    <a href="#" class="btn btn-dark">Seleccionar</a>
                </div>
                <br>
            </div>
        </div>
    }

</div>
